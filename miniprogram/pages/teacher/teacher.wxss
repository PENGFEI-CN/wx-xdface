.body{
  width: 100%;
  height:100vh;
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content:  space-around;
  justify-items: center;
}

image{
  width:80rpx; 
  height:80rpx;
}

.user-motto{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size:40rpx;
  margin:20rpx;
  border-bottom: 2px solid #c2b9b9;
}

.usermotto {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 240rpx;
}

progress{
  margin:100px 40px;
}

.button1{
  border: 1px solid rgba(0, 0, 0, 0.1);
  margin:20rpx;
  width:400rpx;
  background-color: #494949;
  box-shadow: 0px 1px 4px #c2b9b9 ;
}

.page{
  width:90%;
  margin-top: 10rpx;
  height:80vh;
  background: #f6f6f6;
  display: flex;
  flex-direction:row;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  border: 4rpx solid #bdc2c0;
  box-shadow:  0rpx 3rpx 2rpx #c2b9b9 ;
