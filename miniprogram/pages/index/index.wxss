/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items:  center;
  justify-content: center;
}

.divLine{
 margin-top: 20rpx;
 background: #E0E3DA;
 width: 100%;
 height: 5rpx;
}
.user-motto{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size:40rpx;
  margin:20rpx;
  border-bottom: 2px solid #c2b9b9;
}
.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 10rpx solid rgb(252, 249, 247);
  box-shadow: 0px 4px 4px #c2b9b9 ;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 60rpx;
}

.section{
  display: flex;
  flex-direction: column;
  margin: 60rpx;
  align-items: center;
  width:400rpx;
  border: 10rpx solid rgb(252, 249, 247);
  box-shadow: 0px 4px 4px #c2b9b9 ;
}
.student{
  display: flex;
  flex-direction: row;
}
.student image{
  width:80rpx; 
  height:80rpx;
}
.teacher image{
  width:100rpx; 
  height:100rpx;
}

.teacher{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.warn{
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin:30rpx;
  font-size: 35rpx;
  color: rgb(169, 172, 177);
}