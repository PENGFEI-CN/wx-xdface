.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items:  center;
  justify-content: center;
}

.divLine{
 margin-top: 20rpx;
 background: #E0E3DA;
 width: 100%;
 height: 5rpx;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 10rpx solid rgb(252, 249, 247);
  box-shadow: 0px 4px 4px #c2b9b9 ;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  width:250rpx;
  margin-top: 40rpx;
  border: 10rpx solid rgb(252, 249, 247);
  box-shadow: 0px 4px 4px #c2b9b9 ;
}

.section{
  display: flex;
  flex-direction: column;
  margin: 60rpx;
  align-items: center;
  width:400rpx;
  border: 10rpx solid rgb(252, 249, 247);
  box-shadow: 0px 4px 4px #c2b9b9 ;
}
.teacher{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.warn{
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin:30rpx;
  font-size: 35rpx;
